<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.list.QueryListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queries_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_query_bt"
        tools:listitem="@layout/query_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <Button
        android:id="@+id/add_query_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSnow"
        android:text="@string/add_query"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:drawableTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>